<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_recipe_item"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools" >

    <ImageView
        android:id="@+id/iv_recipe_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/recipe_image_content_description"/>

    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/iv_recipe_image"
        android:layout_toRightOf="@id/iv_recipe_image"
        tools:text="Cheese cake"
        style="@style/BasicTextStyle"/>

    <TextView
        android:id="@+id/tv_label_number_of_servings"
        android:layout_toEndOf="@+id/iv_recipe_image"
        android:layout_toRightOf="@id/iv_recipe_image"
        android:layout_below="@+id/tv_recipe_name"
        android:text="@string/label_number_of_servings"
        style="@style/BasicTextStyle"/>

    <TextView
        android:id="@+id/tv_number_of_servings"
        android:layout_toRightOf="@+id/tv_label_number_of_servings"
        android:layout_toEndOf="@id/tv_label_number_of_servings"
        android:layout_below="@id/tv_recipe_name"
        style="@style/BasicTextStyle"
        tools:text="8"/>
</RelativeLayout>